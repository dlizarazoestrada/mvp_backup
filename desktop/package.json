{
  "name": "alumen-eeg-desktop",
  "version": "0.1.0",
  "description": "Desktop wrapper for Mental Health MVP (Electron + packaged Python backend)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win nsis zip",
    "dist:mac": "electron-builder --mac dmg zip"
  },
  "build": {
    "appId": "com.alumen.eeg",
    "productName": "Alumen EEG",
    "asar": true,
    "extraResources": [
      {
        "from": "../backend",
        "to": "app/backend"
      },
      {
        "from": "../frontend",
        "to": "app/frontend"
      },
      {
        "from": "resources/python-env",
        "to": "python-env"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icons/win/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icons/mac/icon.icns",
      "artifactName": "${productName}-${version}-${os}.${ext}"
    }
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "wait-on": "^7.0.0",
    "detect-port": "^1.6.1"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.0.0",
    "icon-gen": "^5.0.0"
  }
}