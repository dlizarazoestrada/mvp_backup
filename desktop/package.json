{
  "name": "alumen-eeg-desktop",
  "version": "0.1.0",
  "description": "Desktop wrapper for Mental Health MVP (Electron + packaged Python backend)",
  "main": "main.js",
  "author": "Alumen Team",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win nsis zip",
    "dist:mac": "electron-builder --mac dmg zip"
  },
  "build": {
    "appId": "com.alumen.eeg",
    "productName": "Alumen EEG",
    "asar": true,
    "files": [
      "main.js",
      "package.json",
      "splash.html"
    ],
    "extraResources": [
      {
        "from": "dist/backend_executable",
        "to": "backend_executable"
      },
      {
        "from": "../frontend",
        "to": "frontend"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icons/win/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": "zip",
      "minimumSystemVersion": "10.13"
    }
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "wait-on": "^7.0.0",
    "detect-port": "^1.6.1"
  },
  "devDependencies": {
    "electron": "20.3.5",
    "electron-builder": "23.6.0",
    "icon-gen": "^5.0.0"
  }
}